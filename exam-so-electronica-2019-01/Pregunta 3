#include <fcntl.h>
#include <stdio.h>

int main ()
{
  int pid, status;
  switch (pid=fork()) 
  {
    case –1:
            printf("No se pudo crear el proceso hijo");
            exit (1);
            break;
    case 0:
            printf (\nProceso hijo. PID = %d\n",pid);
            break;
    default:
            printf (“\nProceso padre. PID = %d \n”, pid);
            wait (&status); 
            break;
  }
  printf (“\Ejecución finalizada \n”);
  return 0;
} 
